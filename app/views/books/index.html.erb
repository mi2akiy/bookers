<body>
  <p id="notice"></p>
  <h1>Books</h1>
  
  
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td>
         <%= book.title %>
      </td>
      <td>
        <%= book.body %>
      </td>
      <td>
        <span>
          <%= link_to "Show",book_path(book.id) %>
        </span>
         <span>
          <%= link_to "Edit",edit_book_path(book.id) %>
        </span>
         <span>
          <%= link_to "Destroy",book_path(book.id),method: :delete,"data-confirm" => "本当に削除しますか？" %>
        </span>
      </td>
    </tr>
    <% end %>
  </table>

  <h2>New book</h2>
  <% if @book.errors.any? %>
  error
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <%= form_with model: @book do |f| %>
  <div class="field">
    <h4 class="book-title">Title</h4>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <h4 class="book-body">Body</h4>
    <%= f.text_area :body %>
  </div>

  <div class="action">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>

</body>